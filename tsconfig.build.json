{
  "extends": "./tsconfig.json",
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "example",
    "src/__tests__",
    "commitlint.config.ts",
    "**/*.d.ts",
    "lib/**/*"
  ],
  "compilerOptions": {
    "skipLibCheck": true,
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "outDir": "./lib/typescript",
    "pretty": true,
    "emitDeclarationOnly": true,
    "target": "ES2018",
    "lib": ["ES2018"]
  }
}
